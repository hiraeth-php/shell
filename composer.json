{
	"name": "hiraeth/shell",
	"description": "REPL for the Hiraeth Nano-Framework",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"license": "MIT",
	"authors": [
		{
			"name":  "Matthew J. Sahagian",
			"email": "matthew.sahagian@gmail.com",
			"role":  "Lead Architect / Developer"
		}
	],
	"require": {
		"hiraeth/app": "^3.0",
		"hiraeth/console": "^3.0",
		"psy/psysh": "^0.12"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.0",
		"phpunit/phpunit": "^10.0"
	},
	"autoload": {
		"classmap": [
            "src"
        ]
	},
	"autoload-dev": {
		"classmap": [
            "test/src"
        ]
	},
	"type": "opus-package",
	"extra": {
		"opus": {
			"hiraeth/app": {
				"config": ""
			}
		}
	},
	"config": {
		"allow-plugins": {
			"imarc/opus": true
		}
	}
}
